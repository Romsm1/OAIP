# Задание 1
def main():
try:
    # Запрос ввода двух чисел
    num1 = int(input("Введите первое целое число: "))
    num2 = int(input("Введите второе целое число: "))
    
    # Сложение чисел
    result = num1 + num2
    
    # Вывод результата
    print(f"Результат сложения: {result}")
    
except ValueError:
    # Обработка ошибки, если введены не целые числа
    print("Ошибка: введены нецелые числа. Пожалуйста, введите целые числа.")

# Задание 2
while True:
    try:
        # Запрос ввода двух чисел
        num1 = int(input("Введите первое целое число: "))
        num2 = int(input("Введите второе целое число: "))
        
        # Сложение чисел
        result = num1 + num2
        
        # Вывод результата
        print(f"Результат сложения: {result}")
        
        # Выход из цикла, так как оба числа введены корректно
        break
    except ValueError:
        # Обработка ошибки, если введены не целые числа
        print("Ошибка: введены нецелые числа. Пожалуйста, введите целые числа.")

# Задание 3

while True:
    try:
        # Запрос ввода двух чисел
        num1 = int(input("Введите первое целое число: "))
        num2 = int(input("Введите второе целое число: "))
        
        # Проверка на деление на 0
        if num2 == 0:
            raise ZeroDivisionError("Ошибка: деление на ноль невозможно.")
        
        # Деление чисел
        result = num1 / num2
        
        # Вывод результата
        print(f"Результат деления: {result}")
        
        # Выход из цикла, так как оба числа введены корректно
        break
    except ValueError:
        # Обработка ошибки, если введены не целые числа
        print("Ошибка: введены нецелые числа. Пожалуйста, введите целые числа.")
    except ZeroDivisionError as e:
        # Обработка ошибки деления на 0
        print(e)


# Задание 4


while True:
    try:
        # Запрос ввода двух чисел
        num1 = int(input("Введите первое целое число: "))
        num2 = int(input("Введите второе целое число: "))
        
        # Сложение чисел
        sum_result = num1 + num2
        print(f"Результат сложения: {sum_result}")
        
        # Проверка на деление на 0
        if num2 == 0:
            raise ZeroDivisionError("Ошибка: деление на ноль невозможно.")
        
        # Деление чисел
        div_result = num1 / num2
        print(f"Результат деления: {div_result}")
        
        # Выход из цикла, так как оба числа введены корректно
        break
    except ValueError:
        # Обработка ошибки, если введены не целые числа
        print("Ошибка: введены нецелые числа. Пожалуйста, введите целые числа.")
    except ZeroDivisionError as e:
        # Обработка ошибки деления на 0
        print(e)

# Задание 5
while True:
    try:
        # Запрос ввода двух чисел
        num1 = int(input("Введите первое целое число: "))
        num2 = int(input("Введите второе целое число: "))
        
        # Сложение чисел
        sum_result = num1 + num2
        print(f"Результат сложения: {sum_result}")
        
        # Проверка на деление на 0
        if num2 == 0:
            raise ZeroDivisionError("Ошибка: деление на ноль невозможно.")
        
        # Деление чисел
        div_result = num1 / num2
        print(f"Результат деления: {div_result}")
        
        # Выход из цикла, так как оба числа введены корректно
        break
    except ValueError:
        # Обработка ошибки, если введены не целые числа
        print("Ошибка: введены нецелые числа. Пожалуйста, введите целые числа.")
    except ZeroDivisionError as e:
        # Обработка ошибки деления на 0
        print(e)

# Вывод сообщения о завершении программы
print("Выход из программы")






if __name__ == '__main__':
    main()
